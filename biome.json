{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
    },
    "files": { "ignoreUnknown": false, "ignore": ["node_modules"] },
    "formatter": { "enabled": true, "indentStyle": "tab" },
    "organizeImports": { "enabled": true },
    "linter": {
      "enabled": true,
      "rules": { 
      "a11y": {"recommended": true},
      "performance": {"recommended": true},
      "complexity": {"recommended": true},
      "style": {
        "noVar":"error", 
        "noCommaOperator":"error",
        "useConst":"off"
      },
      "correctness": {
        "recommended": true
      }
    }
    },
    "javascript": { 
      "formatter": 
      { 
        "quoteStyle": "double",
        "semicolons":"asNeeded"
      }
    }
  }